{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-use-before-define": ["error", {
      "variables": false,
      "functions": false
    }],
    "no-unused-vars": "off",
    "indent": ["off", ["tab", 2, 4, 8]],
    "max-len": "off",
    "no-console": "off",
    "no-shadow": "off"
  }
}